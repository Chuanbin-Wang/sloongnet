    "version": "0.2.0", 
    "configurations": [        
        {
            "name": "Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/sloongnet",
            "args": [
                    "127.0.0.1:8002"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "build",
            "MIMode": "gdb",
        },
       {
            "name": "Control Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/sloongnet",
            "args": [
                    "8002"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "build",
            "MIMode": "gdb",
        },
        {
            "name": "(WSL)Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "/mnt/d/Projects/sloongnet/build/debug/sloongnet",
            "args": [
                "127.0.0.1:8002"
            ],
            "stopAtEntry": false,
            "cwd": "/mnt/d/Projects/sloongnet/",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "build",
            "windows": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "pipeTransport": {
                "pipeCwd": "",
                "pipeProgram": "${env:windir}\\SysNative\\bash.exe",
                "pipeArgs": [
                    "-c"
                ],
                "debuggerPath": "/usr/bin/gdb"
            },
            "sourceFileMap": {
                "/mnt/d": "D:\\"
            }
        },
        {
            "name": "(WSL)Control Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "/mnt/d/Projects/sloongnet/build/debug/sloongnet",
            "args": [
                "8002"
            ],
            "stopAtEntry": false,
            "cwd": "/mnt/d/Projects/sloongnet/",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "build",
            "windows": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "pipeTransport": {
                "pipeCwd": "",
                "pipeProgram": "${env:windir}\\SysNative\\bash.exe",
                "pipeArgs": [
                    "-c"
                ],
                "debuggerPath": "/usr/bin/gdb"
            },
            "sourceFileMap": {
                "/mnt/d": "D:\\"
            }
        },
    ]
}