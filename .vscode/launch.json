    "version": "0.2.0", 
    "configurations": [        
        {
            "name": "Control Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/sloongnet_control/sloongnet_control",
            "args": [
                    "8002"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
        },
       {
            "name": "Proxy Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/sloongnet_proxy/sloongnet_proxy",
            "args": [
                    "127.0.0.1:8002"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
        }
    ]
}