    "version": "0.2.0", 
    "configurations": [        
        {
            "name": "Launch Worker",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/sloongnet",
            "args": [
                    "Worker",
                    "127.0.0.1:8002"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "build",
            "MIMode": "gdb",
        },
        {
            "name": "Launch Manager",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/debug/sloongnet",
            "args": [
                    "Manager",
                    "0.0.0.0:8002"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "preLaunchTask": "build",
            "MIMode": "gdb",
        }
    ]
